{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": {
          "webpack": {
            "config": "./webpack.config.js"
          }
        }
    },
    "rules": {
        "no-shadow": "off",
        "no-param-reassign": "off",
        "eol-last": "off",
        "import/extensions": [
            1,
            {
                "js": "always",
                "json": "always"
            }
        ],
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"],
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    },
    "ignorePatterns": [
        "dist/",
        "build/"
    ]
}